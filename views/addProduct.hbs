<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous"/>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css"/>
    <link rel="stylesheet" href="/css/store.css" />
    <link rel="stylesheet" href="/css/stylelogin.css" />
    <title>Add product</title>
    <link rel="icon" type="image/x-icon" href="/images/favicon.ico">
  </head>
  <body>
    <div class="container-fluied">
      <div class="row">
        <div class="col-12">
          <nav class="row addcart">
            <span class="logoMedi">
              <a class="login-home-icon" href="/dashboard"><img src="/images/favicon.png" alt="logo"/>Medicana</a>
            </span>
            <span class="cartMedi">
              <a href="#" class=""><i class="bi bi-cart3"></i><span id="counter">0</span></a>
            </span>
          </nav>
        </div>
      </div>
      <div class="row">
        <div class="col">
          <button onclick="addBtn()" class="btn btn-success add_product_btn ms-3">Add Product</button>
        </div>
      </div>
      <div class="row d-flex justify-content-center">
        <div class="col-5 shadow p-3 mb-5 bg-body-tertiary rounded" id="addItem">
              <div class="mb-6">
                <label for="title" class="form-label">Card Title</label>
                <input type="text" name="cardTitle" class="form-control" id="title" required/>
              </div>
              <div class="mb-6">
                <label for="description" class="form-label">Card Description</label>
                <input type="text" name="description" class="form-control" id="description" required/>
              </div>
              <div class="mb-6">
                <label for="price" class="form-label">Product Price</label>
                <input type="number" name="price" class="form-control" id="price" required/>
              </div>
              <div class="mb-6">
                <label for="img" class="form-label">Product Image</label>
                <input type="text" name="img" class="form-control"  id="img" required  />
              </div>   
          <button type="submit" id="btn" onclick="addProduct()" class="btn btn-primary addproduct">Add Product</button>
        </div>
      </div>
      <div class="row" id="update_item">
      </div>
    </div>



    <script src="/js/admin_store.js"></script>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN"
      crossorigin="anonymous"
    ></script>
    <script src="/js/store.js"></script>
  </body>
</html>